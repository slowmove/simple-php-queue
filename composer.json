{
    "name": "slowmove/simple-php-queue",
    "description": "A simple, primarily file based, queue with multiple adapters",
    "type": "library",
    "license": "MIT",
    "scripts": {
        "test": "pest",
        "test:typecoverage": "pest --type-coverage src"
    },
    "autoload": {
        "psr-4": {
            "Slowmove\\SimplePhpQueue\\": "src/"
        }
    },
    "require": {
        "php": ">=8.1",
        "predis/predis": "^2.2"
    },
    "require-dev": {
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-type-coverage": "^2.8"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
