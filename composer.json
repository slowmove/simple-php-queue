{
    "name": "erikhoffman/simple-php-queue",
    "type": "library",
    "scripts": {
        "test": "pest",
        "test:typecoverage": "pest --type-coverage src"
    },
    "autoload": {
        "psr-4": {
            "Hoffman\\SimplePhpQueue\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Erik Hoffman",
            "email": "erik.johansson87@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "predis/predis": "^2.2"
    },
    "require-dev": {
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-type-coverage": "^2.8"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
